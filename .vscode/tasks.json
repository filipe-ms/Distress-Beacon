{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Debug (SteamOS)",
            "type": "shell",
            "command": "make",
            "linux": {
                "command": "distrobox enter Dev-Ubuntu-24.04 -- bash -c \"make\"",
                "args": []
            },
            "group": { "kind": "build", "isDefault": true },
            "problemMatcher": [ "$gcc" ],
            "dependsOn":["UpdateMake (SteamOS)"]
        },
        {
            "label": "Build Release (SteamOS)",
            "type": "shell",
            "command": "make",
            "linux": {
                "command": "distrobox enter Dev-Ubuntu-24.04 -- bash -c \"make config=release_x64\"",
                "args": []
            },
            "group": "build",
            "problemMatcher": [ "$gcc" ],
            "dependsOn":["UpdateMake (SteamOS)"]
        },
        {
            "label": "Clean (SteamOS)",
            "type": "shell",
            "command": "make",
            "linux": {
                "command": "distrobox enter Dev-Ubuntu-24.04 -- bash -c \"make clean\"",
                "args": []
            },
            "osx": { /* ... */ },
            "group": "build",
            "problemMatcher": [ "$gcc" ],
            "dependsOn":["UpdateMake (SteamOS)"]
        },
        {
            "label": "UpdateMake (SteamOS)",
            "type": "shell",
            "command": "./premake5",
            "options": { "cwd": "${workspaceFolder}/build/" },
            "args": [ "gmake2" ],
            "linux": {
                "command": "distrobox enter Dev-Ubuntu-24.04 -- bash -c \"${workspaceFolder}/build/premake5 gmake2\"",
                "args": []
            },
            "group": "build"
        }
    ]
}